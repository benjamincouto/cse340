<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% let account = locals.accountData %>
    <% if (locals.loggedIn) { %>
      <div class="account-container">
      <a href="/account/" title="Account Management" class="header-welcome">Welcome <%= account.account_firstname %></a>
      </div>
    <% } %>
      <div class="login-logout-container">
        <% if (locals.loggedIn) { %>
          <a title="Logout" href="/account/logout" class="header-logout">Logout</a>
        <% } else { %>
          <a title="Login" href="/account/login" class="header-login">My Account</a>
        <% } %>
      </div>
  </div>
</header>
