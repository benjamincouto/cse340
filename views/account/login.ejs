<!-- Content Heading:  -->
<% if (title) { %>
    <h1 class="inv-h1"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
<!-- Message Block -->
<%- messages() %>
<div class="form-flex">
<form id="login-form">
    <label for="email">E-mail: </label><br>
    <input type="email" id="email-login" name="account_email"><br>
    <label for="password">Password: </label><br>
    <input type="password" id="login-password" name="account_password"><br>
    <input type="submit" value="Login" id="login-button">
    <p>No account? <a id="signUpLogin" href="/account/register">Sign-up</a></p>
</form>
</div>
